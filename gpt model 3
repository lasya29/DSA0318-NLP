import openai

# Replace 'your-api-key' with your actual OpenAI API key
openai.api_key = "your-api-key"

def generate_text(prompt, model="text-davinci-003", max_tokens=100):
    try:
        # Make a request to the OpenAI API to generate text
        response = openai.Completion.create(
            model=model,
            prompt=prompt,
            max_tokens=max_tokens,
            n=1, # Number of completions to generate
            stop=None, # Optionally, you can specify a stopping condition
            temperature=0.7 # Controls randomness (0.0 - deterministic, 1.0 - more creative)
        )

        # Extract the generated text from the response
        generated_text = response.choices[0].text.strip()
        return generated_text

    except Exception as e:
        print(f"Error generating text: {e}")
        return None

# Example usage
prompt = "Write a short story about a robot who learns to love."
generated_text = generate_text(prompt)
print("Generated Text:")
print(generated_text)
